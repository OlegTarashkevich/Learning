<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_ripple"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/article_logo_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/l_size"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            tools:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/article_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="@dimen/m_text_size"
            tools:text="Name"/>

        <TextView
            android:id="@+id/article_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/l_size"
            android:gravity="center_vertical"
            android:textSize="@dimen/m_text_size"
            android:textStyle="bold"
            tools:text="Name"/>

        <TextView
            android:id="@+id/article_url_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/l_size"
            android:autoLink="web"
            android:gravity="center_vertical"
            android:textSize="@dimen/m_text_size"
            tools:text="Name"/>

        <TextView
            android:id="@+id/article_description_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/l_size"
            android:gravity="center_vertical"
            android:textSize="@dimen/m_text_size"
            tools:text="Name"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <ImageButton
                android:id="@+id/article_share_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/m_size"
                android:background="@drawable/selector_ripple"
                android:src="@drawable/ic_share"/>

        </LinearLayout>

